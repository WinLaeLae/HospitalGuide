<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="165dp"
    android:layout_marginLeft="14dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="14dp"
    android:background="@drawable/packages_item_bg">

    <TextView
        android:id="@+id/hosptal_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pyidaungsu_book_bold"
        android:text="ကန်သာယာဆေးရုံ"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@id/packagesImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <ImageView
        android:id="@+id/packagesImg"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:src="@drawable/logo_kan_thar_yar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/packagesName_txt"
        app:layout_constraintTop_toBottomOf="@id/hosptal_title_txt" />

    <TextView
        android:id="@+id/packagesName_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:text="Medical Checkup Package: Super Senior"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:fontFamily="@font/pyidaungsu_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/packagesPrice_txt"
        app:layout_constraintTop_toBottomOf="@+id/packagesImg" />

    <TextView
        android:id="@+id/packagesPrice_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="၂၅၀,၀၀၀"
        android:textSize="13sp"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/packagesName_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>