<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.btn_event.BtnEvent_Fragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hospName_txt"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:text="SSC ဆေးရုံ"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center"
    app:layout_constraintBottom_toTopOf="@id/recyclerView_btn_event"
    android:fontFamily="@font/pyidaungsu_book_bold"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/recyclerView_btn_event"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hospName_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>